# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "tztime local"
order += "disk /"
order += "disk /home"
order += "ethernet _first_"
order += "volume master"
order += "cpu_usage"
#order += "cpu_usage 1"
#order += "cpu_usage 2"
#order += "cpu_usage 3"

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = ""
	color_good = "#FFFFFF"
}

tztime local {
        format = "  %d/%m/%Y %H:%M"
}

disk "/" {
	prefix_type = "custom"
        format = "  %used Used, %avail Avail"
	threshold_type = "gbytes_avail"
	low_threshold = 4
}

disk "/home" {
	prefix_type = "custom"
        format = "  %used Used, %avail Avail"
	threshold_type = "gbytes_avail"
	low_threshold = 7
}

volume master {
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
	format = " %usage"
	degraded_threshold = 49
	separator = false
}
